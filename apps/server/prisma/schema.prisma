datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

model Org {
  id           String         @id @default(cuid())
  icon         String
  name         String
  userID       String
  users        UsersOnOrgs[]
  Role         Role[]
  categories   Category[]
  channels     Channel[]

  @@map("orgs")
}

model Blog {
  id      String @id @default(cuid())
  image   String
  content String
  title   String

  @@map("blogs")
}

model Role {
  id           String         @id @default(cuid())
  name         String
  color        String
  orgID        String
  org          Org            @relation(fields: [orgID], references: [id])
  UsersOnRoles UsersOnRoles[]
  userId       String?

  @@map("roles")
}

model User {
  id           String            @id @default(cuid())
  email        String            @unique
  password     String
  salt         String
  orgs         UsersOnOrgs[]
  username   String?           @unique
  fullName     String?
  UsersOnRoles UsersOnRoles[]
  Messages     Message[]
  channels     UsersOnChannels[]

  friends    Friend[]          @relation(name: "user")
  friendsOf  Friend[]          @relation(name: "userOf")

  @@map("users")
}

enum RelationShipStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model Friend {
  id     String @id @default(cuid())
  user   User   @relation(name: "user", fields: [userId], references: [id])
  userId String

  userOfId String
  userOf   User   @relation(name: "userOf", fields: [userOfId], references: [id])

  status RelationShipStatus @default(value: PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, userOfId])
  @@map("friends")
}


enum ChannelType {
  TEXT
  VOICE
  FORUM
  ANNOUNCEMENT
  STAGE
}

model Channel {
  id         String            @id @default(cuid())
  name       String
  orgId      String?
  org        Org?              @relation(fields: [orgId], references: [id], onDelete: Cascade)
  type       ChannelType
  isPrivate  Boolean           @default(false)
  members    UsersOnChannels[]
  messages   Message[]
  categoryId String?
  category   Category?         @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId], name: "categoryId")
  @@index([orgId])
  @@map("channels")
}

model Category {
  id        String    @id @default(cuid())
  name      String
  orgId     String
  org       Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  isPrivate Boolean   @default(false)
  channels  Channel[]

  @@index([orgId], name: "orgId")
  @@map("categories")
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id], onDelete: Cascade)
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model UsersOnChannels {
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  channel   Channel @relation(fields: [channelId], references: [id])
  channelId String

  @@id([userId, channelId])
  @@map("users_on_channels")
}

model UsersOnRoles {
  user   User    @relation(fields: [userId], references: [id])
  userId String
  role   Role    @relation(fields: [roleId], references: [id])
  roleId String
  orgID  String?

  @@id([roleId, userId])
  @@map("users_on_roles")
}

model UsersOnOrgs {
  user   User   @relation(fields: [userID], references: [id])
  userID String
  org    Org    @relation(fields: [orgID], references: [id])
  orgID  String

  @@id([orgID, userID])
  @@map("users_on_orgs")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

model Org {
  id       String        @id @default(cuid())
  icon     String
  name     String
  userID   String
  users    UsersOnOrgs[]
  channels Channel[]
  Role     Roles[]

  @@map("orgs")
}

model Roles {
  id     String  @id @default(cuid())
  name   String
  color  String
  orgID  String
  Org    Org     @relation(fields: [orgID], references: [id])
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("roles")
}

model User {
  id         String        @id @default(cuid())
  email      String        @unique
  password   String
  salt       String
  orgs       UsersOnOrgs[]
  fullName   String?
  Role       Roles[]

  @@map("users")
}

model Channel {
  id    String @id @default(cuid())
  name  String
  orgId String
  Org   Org    @relation(fields: [orgId], references: [id])

  @@map("channels")
}

model UsersOnOrgs {
  user   User   @relation(fields: [userID], references: [id])
  userID String
  org    Org    @relation(fields: [orgID], references: [id])
  orgID  String

  @@id([orgID, userID])
  @@map("users_on_orgs")
}
